      <div class="row">
        <ul class="users">
        <% @posts.each do |post| %>
            <li>
                <%= link_to post.title, post %> | <%= link_to "edit", post_edit_path(post) %> | <%= link_to "delete", post, method: :delete,
                    data: { confirm: "You sure?" } %></br>
                <%= post.short_desc %>
            </li>
        <% end %>
        </ul>
        
        </div>
      
      <%= paginate @posts %>